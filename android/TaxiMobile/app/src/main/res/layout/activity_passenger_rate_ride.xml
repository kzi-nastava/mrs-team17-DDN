<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rate_ride_title"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tvRide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rate_ride_none"
            android:textColor="@color/text_gray"
            android:paddingBottom="8dp" />

        <ProgressBar
            android:id="@+id/ratingProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/bg_card"
            app:strokeWidth="1dp"
            app:strokeColor="@color/background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate_driver_label"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/rbDriver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1"
                    android:rating="5"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate_vehicle_label"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />

                <RatingBar
                    android:id="@+id/rbVehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1"
                    android:rating="5"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate_comment_label"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="12dp" />

                <EditText
                    android:id="@+id/etComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_gray"
                    android:background="@color/background"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:maxLines="6"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:hint="@string/rate_comment_hint" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvRatingSuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:textColor="@color/green"
            android:background="@color/bg_card"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvRatingError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:textColor="@android:color/holo_red_light"
            android:background="@color/bg_card"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnSubmitRating"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="14dp"
            android:text="@string/rate_submit"
            android:textAllCaps="false"
            android:backgroundTint="@color/bg_dark" />

    </LinearLayout>

</ScrollView>
