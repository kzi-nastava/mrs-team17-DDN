<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen_gradient_user">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rate_ride_title"
            android:textSize="30sp"
            android:letterSpacing="0.01"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rate_ride_subtitle"
            android:textColor="@color/text_gray"
            android:textSize="14sp"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/tvRide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rate_ride_none"
            android:textColor="#D4C7BD"
            android:textStyle="bold"
            android:textSize="14sp"
            android:background="@drawable/bg_pill_muted_user"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp" />

        <ProgressBar
            android:id="@+id/ratingProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="6dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="#1F1D1E"
            app:strokeWidth="1dp"
            app:strokeColor="#464143">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate_driver_label"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/rate_driver_hint"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp" />

                <RatingBar
                    android:id="@+id/rbDriver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1"
                    android:rating="5"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate_vehicle_label"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/rate_vehicle_hint"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp" />

                <RatingBar
                    android:id="@+id/rbVehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1"
                    android:rating="5"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate_comment_label"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="12dp" />

                <EditText
                    android:id="@+id/etComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_gray"
                    android:background="@drawable/bg_input_surface_user"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:maxLines="6"
                    android:gravity="top|start"
                    android:maxLength="500"
                    android:hint="@string/rate_comment_hint" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvRatingSuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:textColor="@color/green"
            android:background="@drawable/bg_feedback_success_user"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvRatingError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:textColor="@android:color/holo_red_light"
            android:background="@drawable/bg_feedback_error_user"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnSubmitRating"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_button_primary_user"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            android:text="@string/rate_submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>
