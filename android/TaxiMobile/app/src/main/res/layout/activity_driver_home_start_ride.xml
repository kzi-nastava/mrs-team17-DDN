<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen_gradient_user"
    android:padding="12dp">

    <LinearLayout
        android:id="@+id/dhTopCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_surface_user"
        android:orientation="vertical"
        android:padding="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/dhTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/driver_start_ride_title_default"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dhEmptyState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/driver_home_no_accepted_ride"
            android:textColor="@color/text_gray"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dhRouteStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/driver_start_ride_route_start_default"
            android:textColor="@color/text_gray"
            android:textSize="13sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dhCheckpointsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/driver_start_ride_checkpoints_label"
            android:textColor="@color/text_gray"
            android:textStyle="bold"
            android:textSize="13sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dhCheckpointsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_gray"
            android:textSize="13sp"
            android:visibility="gone"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dhRouteEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/driver_start_ride_route_end_default"
            android:textColor="@color/text_gray"
            android:textSize="13sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dhMeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/driver_start_ride_meta_default"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dhError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_feedback_error_user"
            android:padding="10dp"
            android:textColor="@android:color/holo_red_light"
            android:visibility="gone" />
    </LinearLayout>

    <org.osmdroid.views.MapView
        android:id="@+id/dhMap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_card_surface_user"
        app:layout_constraintTop_toBottomOf="@id/dhTopCard"
        app:layout_constraintBottom_toTopOf="@id/dhStartBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/dhStartBtn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_button_primary_user_green"
        android:text="@string/driver_start_ride_start_button"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/dhProgress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
