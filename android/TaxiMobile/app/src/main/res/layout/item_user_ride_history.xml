<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#1F1D1E"
    app:strokeWidth="1dp"
    app:strokeColor="#464143">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvRideTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvRideDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D4C7BD"
                android:textSize="12sp"
                android:background="@drawable/bg_pill_muted_user"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvRideRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvRideStops"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#C4BCBF"
            android:textSize="13sp"
            android:layout_marginTop="6dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvDetailsHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/ride_open_details_hint"
            android:textColor="#938B8F"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnFavoriteRide"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_button_outline_user"
                android:backgroundTint="@null"
                android:contentDescription="@string/favorite_add_cd"
                android:padding="8dp"
                android:src="@drawable/ic_star_outline_user"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btnRateRide"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/bg_button_outline_user"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:text="@string/rate_action"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
