<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_surface_user">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Block user"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDialogName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#D4C7BD"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDialogEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/text_gray"
            android:textSize="13sp" />

        <RadioGroup
            android:id="@+id/rgStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbBlocked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blocked"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/rbUnblocked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unblocked"
                android:textColor="@color/white" />

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Note (optional)"
            android:textColor="@color/text_gray"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/etReason"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_input_surface_user"
            android:gravity="top"
            android:hint="Why is this user blocked?"
            android:inputType="textMultiLine"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/text_gray" />

        <TextView
            android:id="@+id/tvDialogError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_feedback_error_user"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_outline_user"
                android:backgroundTint="@null"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_primary_user"
                android:backgroundTint="@null"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
