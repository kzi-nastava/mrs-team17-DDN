<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen_gradient_user">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pricing setup"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Update ride pricing values used by the system."
                android:textColor="@color/text_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_feedback_success_user"
                android:paddingHorizontal="12dp"
                android:paddingVertical="10dp"
                android:text="Saved"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_feedback_error_user"
                android:paddingHorizontal="12dp"
                android:paddingVertical="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="gone" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:cardBackgroundColor="#1F1D1E"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="#464143"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Standard price"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etStandard"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bg_input_surface_user"
                        android:hint="e.g. 120.00"
                        android:inputType="numberDecimal"
                        android:paddingHorizontal="12dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/text_gray" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="Luxury price"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etLuxury"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bg_input_surface_user"
                        android:hint="e.g. 200.00"
                        android:inputType="numberDecimal"
                        android:paddingHorizontal="12dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/text_gray" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="Van price"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etVan"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bg_input_surface_user"
                        android:hint="e.g. 250.00"
                        android:inputType="numberDecimal"
                        android:paddingHorizontal="12dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/text_gray" />

                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/bg_button_primary_user"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:text="Save"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
