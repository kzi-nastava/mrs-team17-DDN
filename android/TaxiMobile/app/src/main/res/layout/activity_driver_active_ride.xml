<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen_gradient_user"
    android:orientation="vertical"
    android:padding="16dp">

    <ProgressBar
        android:id="@+id/arProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/arReload"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/bg_button_primary_user"
        android:backgroundTint="@null"
        app:backgroundTint="@null"
        android:text="Reload"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/arEmptyBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_card_surface_user"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No active ride."
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="When a ride is assigned, details will appear here."
            android:textColor="@color/text_gray"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/arContentBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_card_surface_user"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/arTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ride #"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/arStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Status:"
            android:textColor="#D9CDBA"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/arRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Route:"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/arPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Price:"
            android:textColor="#D7E9D9"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/arFinish"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_button_outline_user"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            android:text="Finish ride (paid)"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
