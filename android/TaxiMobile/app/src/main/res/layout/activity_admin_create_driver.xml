<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen_gradient_user">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/menu_create_drivers"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/admin_create_driver_subtitle"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvSuccess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_feedback_success_user"
                android:paddingHorizontal="12dp"
                android:paddingVertical="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_feedback_error_user"
                android:paddingHorizontal="12dp"
                android:paddingVertical="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="gone" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:cardBackgroundColor="#1F1D1E"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="#464143"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/section_driver"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/first_name_text"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bg_input_surface_user"
                        android:inputType="textPersonName"
                        android:paddingHorizontal="12dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/text_gray"
                        android:autofillHints="name" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="@string/last_name_text"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etLastName"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bg_input_surface_user"
                        android:inputType="textPersonName"
                        android:paddingHorizontal="12dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/text_gray"
                        android:autofillHints="name" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="@string/address_text"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etAddress"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bg_input_surface_user"
                        android:inputType="textPostalAddress"
                        android:paddingHorizontal="12dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/text_gray"
                        android:autofillHints="postalAddress" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="@string/phone_text"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bg_input_surface_user"
                        android:inputType="phone"
                        android:paddingHorizontal="12dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/text_gray"
                        android:autofillHints="phone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="@string/label_email"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bg_input_surface_user"
                        android:inputType="textEmailAddress"
                        android:paddingHorizontal="12dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/text_gray"
                        android:autofillHints="emailAddress" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#1F1D1E"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="#464143"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/section_vehicle"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/vehicle_model"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etVehicleModel"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bg_input_surface_user"
                        android:inputType="text"
                        android:paddingHorizontal="12dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/text_gray" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="@string/vehicle_type"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp" />

                    <Spinner
                        android:id="@+id/spVehicleType"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bg_input_surface_user"
                        android:paddingHorizontal="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="@string/vehicle_plate"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etLicensePlate"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bg_input_surface_user"
                        android:inputType="text"
                        android:paddingHorizontal="12dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/text_gray" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="@string/vehicle_seats"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etSeats"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bg_input_surface_user"
                        android:inputType="number"
                        android:paddingHorizontal="12dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/text_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cbBaby"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/vehicle_baby"
                            android:textColor="@color/white"
                            android:buttonTint="@color/tint_control_blue"
                            app:buttonTint="@color/tint_control_blue" />

                        <CheckBox
                            android:id="@+id/cbPet"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/vehicle_pet"
                            android:textColor="@color/white"
                            android:buttonTint="@color/tint_control_blue"
                            app:buttonTint="@color/tint_control_blue" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/btnCreateDriver"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_button_primary_user_green"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:text="@string/admin_create_driver_create"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressCreateDriver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
