<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/driver_profile_title"
            android:textSize="25sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/avatar"
            android:contentDescription="@string/content_description"
            android:padding="8dp" />

        <Button
            android:backgroundTint="@color/bg_dark"
            android:id="@+id/btnUploadPicture"
            android:layout_width="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="@string/picture_upload_text"
            android:layout_marginTop="8dp" />


        <TextView
            android:textColor="@color/green"
            android:textAlignment="center"
            android:id="@+id/tvActiveTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/working_hours_displayed"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />

        <EditText
            android:textColor="@color/white"
            android:id="@+id/etFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/first_name_text"
            android:padding="12dp"
            android:inputType="textPersonName"
            android:autofillHints="name" />

        <EditText
            android:textColor="@color/white"
            android:id="@+id/etLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/last_name_text"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName"
            android:autofillHints="name" />

        <EditText
            android:textColor="@color/white"
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/address_text"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:inputType="textPostalAddress"
            android:autofillHints="postalAddress" />

        <EditText
            android:textColor="@color/white"
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/phone_text"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:inputType="phone"
            android:autofillHints="phone" />


        <Button
            android:backgroundTint="@color/bg_dark"
            android:id="@+id/btnRequestUpdate"
            android:layout_width="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="@string/request_profile_update_text"
            android:layout_marginTop="18dp" />

        <Button
            android:backgroundTint="@color/bg_dark"
            android:id="@+id/btnRequestPasswordChange"
            android:layout_width="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="@string/password_change_text"
            android:layout_marginTop="10dp" />

    </LinearLayout>
</ScrollView>
